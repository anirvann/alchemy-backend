{
    "version": "0.1.0",
    "command": "nodemon",
    "isShellCommand": true,
    "args": [
        "--exec"
    ],

    "tasks": [
        {
            "taskName": "runFile",
            "suppressTaskName": true,
            "showOutput": "always",
            "problemMatcher": "$jshint",
            "args": ["${file}"]
        }
    ]
}